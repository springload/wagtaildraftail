{
  "name": "wagtaildraftail",
  "version": "0.7.0",
  "description": "Draft.js editor for Wagtail, built upon Draftail",
  "main": "setup.py",
  "keywords": [],
  "author": "Springload",
  "license": "MIT",
  "homepage": "https://github.com/springload/wagtaildraftail#readme",
  "bugs": {
    "url": "https://github.com/springload/wagtaildraftail/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/springload/wagtaildraftail.git"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "useBuiltIns": true,
          "targets": {
            "browsers": [
              "> 1%",
              "IE 11"
            ]
          }
        }
      ],
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/client/tests/styleMock.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/client/tests"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.tox/"
    ]
  },
  "eslintConfig": {
    "extends": "springload",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ]
    }
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "draft-js": "^0.10.1",
    "draftail": "^0.7.2",
    "element-closest": "^2.0.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.22.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.22.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-springload": "1.0.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.10.3",
    "extract-text-webpack-plugin": "^2.0.0",
    "jest": "^20.0.4",
    "nightmare": "^2.10.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.5",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^6.0.5",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "scripts": {
    "start": "webpack --config client/webpack/webpack.config.dev.js --watch",
    "dist": "NODE_ENV=production webpack --config client/webpack/webpack.config.prod.js",
    "lint": "eslint client",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch:coverage": "jest --watch --coverage",
    "report:coverage": "open coverage/lcov-report/index.html",
    "report:build": "open client/webpack/webpack-stats.html"
  }
}
